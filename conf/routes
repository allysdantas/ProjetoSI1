# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /               controllers.Application.index()
GET    /logout         controllers.Autenticacao.logout()

# Criar Viagem
GET    /viagem         controllers.Application.showViagem(String)
POST   /viagem         controllers.Application.criarViagem()

# Participar Viagem
POST   /viagem         controllers.Application.participarDaViagem(String)

# Login
GET    /login          controllers.Autenticacao.showLogin()
POST   /login          controllers.Autenticacao.autenticar()

# Registro
GET    /cadastro       controllers.Autenticacao.showCadastro()
POST   /cadastro       controllers.Autenticacao.cadastrar()

# Sobre
GET    /sobre          controllers.Application.showSobre()              

# Contato
GET    /contato        controllers.Application.showContato()                     

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file   controllers.Assets.at(path="/public", file)
