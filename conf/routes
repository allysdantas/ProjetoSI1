# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /               controllers.Application.index()
GET    /logout         controllers.Autenticacao.logout()

# Login
GET    /login          controllers.Autenticacao.showLogin()
POST   /login          controllers.Autenticacao.autenticar()

# Registro
GET    /cadastro       controllers.Autenticacao.showCadastro()
POST   /cadastro       controllers.Autenticacao.cadastrar()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file   controllers.Assets.at(path="/public", file)
